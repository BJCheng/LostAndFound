<main>
	<hr>
	{{#if user}}
	<button id="postLost" class="btn btn-primary" onclick="postArticle('lost')">Report A Lost</button>
	{{else}}
	<button id="postLost" class="btn btn-basic" onclick="askLoginFirst()">Report A Lost</button>
	{{/if}}
	<hr>
	<div class="list-group list-div">
		{{#each lost}}
		<a href="/lost/{{_id}}" class="list-group-item list-group-item-warning">{{title}}</a>
		{{/each}}
	</div>
	<hr>
</main>